
<div class="container">
  
  <h1>Hi,<%= current_user.first_name if current_user %></h1>


  
  <table>
    
    <tr>
        <th>name</th>
        <th>show</th>
        <th>edit</th>
        <th>delete</th>
    </tr>

    <% @restaurants.each do |restaurant|  %>
    <tr>
      
      <td>
        <%= restaurant.name %>
      </td>

      <td>
        <%= link_to 'show',restaurant_path(restaurant) %>
      </td>
      <td>
        <%= link_to 'edit', edit_admin_restaurant_path(restaurant) %>
      </td>
      <td>
        <%= link_to 'delete', admin_restaurant_path(restaurant),method: :delete, data:{confirm:"Are you sure?"}%>
      </td>

    </tr>
      
    <% end %>
  </table>

  
  <%= link_to 'New Restaurant', new_admin_restaurant_path %>




</div>

